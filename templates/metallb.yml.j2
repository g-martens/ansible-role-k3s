apiVersion: metallb.io/v1beta1
kind: IPAddressPool
metadata:
  name: home-lab-pool
  namespace: metallb-system
spec:
  addresses:
    - {{ metallb_adresses }}
---
apiVersion: metallb.io/v1beta1
kind: L2Advertisement
metadata:
  name: home-lab-l2adv
  namespace: metallb-system
spec:
  ipAddressPools:
    - home-lab-pool